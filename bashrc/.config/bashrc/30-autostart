# -----------------------------------------------------
# Launch dwm when boot
# -----------------------------------------------------

if [[ "$(tty)" == "/dev/tty1" ]]; then
   pgrep dwm || exec startx
fi

# -----------------------------------------------------
# Fastfetch
# -----------------------------------------------------

if [[ $(tty) == *"pts"* ]]; then
    fastfetch
fi
